<div class = "text-center">
  <%= image_tag "star.png", class: "img-fluid" %>
</div>
<div class="container">
  <div class="row">
    <div class="col-10 mx-auto bg-offwhite p-3 mb-2">
      <h2 class="mt-3", style="color:#ff9933;"><strong><%= I18n.t("enums.child.level.#{@level}") %> のおてつだいヒーロー</strong></h2>
        <div class = "col-5 mx-auto mb-4">
          <h1 class="p-3 title border border-radius rounded-pill bg-orange text-white"><strong><%= @child.name %></strong></h1>
        </div>
        <div>
          <%= image_tag @child.get_profile_image(300,300) %>
        </div>
      <table class="table table-border">
        <tbody>
          <tr>
            <th>お誕生日</th>
            <td><%= @child.birth_at.strftime("%Y年 %m月 %d日") %></td>
          </tr>
          <tr>
            <th>年齢</th>
            <td><%= @child.age %>さい</td>
          </tr>
          <tr>
            <th>ひとこと</th>
            <td><%= @child.introduction %></td>
          </tr>
          <tr>
            <th>ポイント数</th>
            <td><%= @child.point %> ポイント</td>
          </tr>
          <tr>
            <th>今月のおてつだいクリア数</th>
            <td><%= @month_clear %>回　(トータル:<%= @total_clear %>回)</td>
          </tr>
          <tr>
            <th>すきなたべもの</th>
            <td><%= @child.favorite_food %></td>
          </tr>
          <tr>
            <th>しょうらいのゆめ</th>
            <td><%= @child.future_dream %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class = "m-3">
    <%= link_to user_path(@child.user), class: "btn btn-info" do %>
      <i class="fa-solid fa-caret-left"></i> もどる
    <% end %>
    <%= link_to edit_child_path(@child), class: "btn btn-success" do %>
      <i class="fa-solid fa-pen-to-square"></i> 編集する
    <% end %>
    <%= link_to clear_tasks_path(@child), class: "btn btn-danger" do %>
      クエスト記録 <i class="fa-solid fa-caret-right"></i>
    <% end %>
    <%= link_to order_lists_path(@child), class: "btn btn-danger" do %>
      オーダー記録 <i class="fa-solid fa-caret-right"></i>
    <% end %>
  </div>
</div>