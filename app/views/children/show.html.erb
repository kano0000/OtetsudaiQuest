<div class="container mt-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <h2 class="mb-4" style="font-weight:bold; color:#FF9900; font-size:45px;"><strong><%= @child.name %> のプロフィール</strong></h2>
      <table class="table table-bordered table-condensed" style="background-color: #FFFFBB;">
        <tbody>
          <%= image_tag @child.get_profile_image(200,200) %>
          <tr>
            <th style="background-color: #FFBBBB; width: 20%;">なまえ</th>
            <td><%=  @child.name %></td>
          </tr>
          <tr>
            <th style="background-color: #FFBBBB;">お誕生日</th>
            <td><%=  @child.birth_at.strftime("%Y年 %m月 %d日") %></td>
          </tr>
          <tr>
            <th style="background-color: #FFBBBB;">年齢</th>
            <td><%=  @child.age %>さい</td>
          </tr>
          <tr>
            <th style="background-color: #FFBBBB;">ひとこと</th>
            <td><%=  @child.introduction %></td>
          </tr>
          <tr>
            <th style="background-color: #FFBBBB;">ポイント数</th>
            <td><%=  @child.point %> ポイント</td>
          </tr>
        </tbody>
      </table>
        <%= link_to "編集する", edit_child_path(@child), class: "btn btn-success btn-sm d-flex align-items-center justify-content-center ml-5", style: "width: 120px; height: 40px; border-radius: 10px;" %>
    </div>
  </div>
</div>