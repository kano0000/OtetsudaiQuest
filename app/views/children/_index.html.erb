<table class = "table table-borderd" style="background-color: #FFFFBB;">
  <tr style="background-color: #FFBBBB;">
    <th></th>
    <th>なまえ</th>
    <th>ポイント数</th>
    <th colspan="3"></th>
  </tr>
  <tr>
    <% children.each do |child| %>
    <td>
      <%= image_tag child.get_profile_image(100,100) %>
    </td>
    <td>
      <%= child.name %>
    </td>
    <td>
      <%= child.point %> ポイント
    </td>
    <td><%= link_to "みる", child_path(child) %></td>
  </tr>
  <% end %>
</table>
