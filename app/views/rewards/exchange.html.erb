<div class="container mt-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <h1 class= "text-center">交換する</h1>
        <%= image_tag @reward.get_gift_image(150,150) %>
      <table class="table table-bordered table-condensed" style="background-color: #FFFFBB;">
        <tbody>
          <tr>
            <th style="background-color: #FFBBBB; width: 20%;">なまえ</th>
            <td><%=  @reward.name %></td>
          </tr>
          <tr>
            <th style="background-color: #FFBBBB;">ポイント数</th>
            <td><%=  @reward.point %> ポイント</td>
          </tr>
        </tbody>
      </table>
      <h2>交換する人を選んでね</h2>
      <%= form_with model: @reward do |f| %>
        <div class="form-group">
          <%= f.label :name, "なまえ" %>
          <%= f.collection_select :child_id, @children, :id, :name, include_blank: "選択して下さい" %>
        </div>
        <div class="form-group">
          <%= f.submit "決定", class: "btn btn-secondary" %>
        </div>
      <% end %>
      <% if @child.present? %>
      <div id = "child_point">
        <%= render "child_point", {child: @child, reward: @reward} %>
      </div>
      <% end %>
      <%= link_to rewards_path, class: "btn btn-info" do %>
        <i class="fa-solid fa-caret-left"></i> もどる
      <% end %>
    </div>
  </div>
</div>
