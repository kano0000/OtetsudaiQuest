<div class="container mt-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <h2 class="mb-4" style="font-weight:bold; color:#FF9900; font-size:45px;"><strong><%= @reward.name %></strong></h2>
      <table class="table table-bordered table-condensed" style="background-color: #FFFFBB;">
        <tbody>
          <%= image_tag @reward.get_gift_image(200,200) %>
          <tr>
            <th style="background-color: #FFBBBB; width: 20%;">なまえ</th>
            <td><%=  @reward.name %></td>
          </tr>
          <tr>
            <th style="background-color: #FFBBBB;">ポイント数</th>
            <td><%=  @reward.point %> ポイント</td>
          </tr>
          <tr>
            <th style="background-color: #FFBBBB;">メッセージ</th>
            <td><%=  @reward.description %></td>
          </tr>
          <tr>
            <th style="background-color: #FFBBBB;">交換</th>
            <% if @reward.published == true %>
              <td>公開中</td>
            <% else %>
              <td>準備中</td>
            <% end %>
          </tr>
        </tbody>
      </table>
        <%= link_to rewards_path, class: "btn btn-info" do %>
          <i class="fa-solid fa-caret-left"></i> もどる
        <% end %>
    </div>
  </div>
</div>