<div class="container my-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <h1 class="mb-4 title"><b>プレゼント一覧</b></h1>
      <% if @rewards.present? %>
        <div class="table-responsive-lg js-scrollable">
          <table class ="table table-borderd bg-offwhite">
            <tr class = "bg-orange">
              <th></th>
              <th>なまえ</th>
              <th>必要ポイント数</th>
              <th colspan="3"></th>
            </tr>
            <tr>
              <% @rewards.each do |reward| %>
              <td>
                <%= image_tag reward.get_gift_image(100,100) %>
              </td>
              <td>
                <%= reward.name %>
              </td>
              <td>
                <%= reward.point %> ポイント
              </td>
              <td>
                <%= link_to edit_reward_path(reward), class: "btn btn-warning" do %>
                  <i class="fa-solid fa-pen-to-square"></i>
                <% end %>
              </td>
            </tr>
            <% end %>
          </table>
        </div>
        <div class="pagination">
            <%= paginate @rewards %>
        </div>
        <div>
          <%= link_to menu_path, class: "btn btn-info" do %>
            <i class="fa-solid fa-caret-left"></i> もどる
          <% end %>
        </div>
      <% else %>
        <h2 class="text-white">登録されていません</h2>
      <% end %>
    </div>
  </div>
</div>
