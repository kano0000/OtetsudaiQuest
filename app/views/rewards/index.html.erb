<div class="container mt-5">
  <div class="col-10 mx-auto">
    <h2 class="mb-4 contents-title text-center" style="font-weight:bold; color:#FF9900; font-size:45px;"><strong>プレゼントメニュー</strong></h2>
    <div class = "text-right m-3">
      <h5><%= link_to '新着順', rewards_path(latest: "true") %>　|　
      <%= link_to 'ポイント順', rewards_path(most_point: "true") %></h5>
    </div>
      <div class="row">
        <% @rewards.each do |reward| %>
          <div class="col-12 col-md-6 col-lg-4">
            <%= link_to reward_path(reward), :style => "text-decoration: none; font-weight:bold; color:#000000;　text-align:center" do %>
              <div class = "panel-box">
              <div class="card mb-4 shadow-lg panel">
                <%= image_tag reward.get_gift_image(200,200) %>
                  <div class="card-body">
                    <p class="text-center"><%= reward.name %><p>
                    <p class="text-center"><%= reward.point %> ポイント</p>
                  </div>
               </div>
               </div>
            <% end %>
          </div>
        <% end %>
    </div>
  </div> 
</div>
