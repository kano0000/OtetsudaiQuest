<div class="table-responsive-lg">
  <table class="table border-top border-bottom table-condensed mt-4 bg-offwhite">
    <thead class="thead-center">
      <tr class="text-center bg-orange">
        <th>お手伝い名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% task_lists.each do |task_list| %>
        <tr class="text-center align-middle">
          <td><%= task_list.name %></td>
          <td>
            <%= link_to edit_task_list_path(task_list), class: "btn btn-warning btn-sm btn-style" do %>
              <i class="fa-solid fa-pen-to-square"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%= link_to menu_path, class: "btn btn-info btn-style" do %>
      <i class="fa-solid fa-caret-left"></i> もどる
    <% end %>
  </div>
</div>