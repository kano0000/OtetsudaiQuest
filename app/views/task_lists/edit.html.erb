<div class="container">
  <div class="row">
    <div class="col-8 mx-auto">
      <h2 class="m-5 title"><strong><%= @task_list.name %> <br class="sp_br">を編集</strong></h2>
        <%= render "layouts/errors", obj: @task_list %>
        <%= form_with model: @task_list, method: :patch do |f| %>
          <div class="form-row align-items-center p-5 bg-offwhite">
            <div class="col-md-3 mb-1 text-md-right mx-auto">
              <%= f.label :name, "お手伝い名" %>
            </div>
            <div class="col-md-5 mb-1 mx-auto">
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="col mb-2 mx-auto">
              <%= f.submit "保存", class: "btn btn-success", style: "border-radius: 12px;" %>
            </div>
            <div class="col mb-2 mx-auto">
            <%= link_to "削除", task_list_path(@task_list), method: :delete, class: "btn btn-danger", style: "border-radius: 12px;" %>
            </div>
          </div>
        <% end %>
    </div>
  </div>
  <div class="mt-3">
    <%= link_to task_lists_path, class: "btn btn-info" do %>
      <i class="fa-solid fa-caret-left"></i> もどる
    <% end %>
  </div>
</div>
<div>
  <%= image_tag "star2.png", class: "img-fluid bg-bottom" %>
</div>