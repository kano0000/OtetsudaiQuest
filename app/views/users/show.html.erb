<div class="container pt-5">
  <div class="row col-11 mx-auto">
    <div class="col-md-4 text-white">
      <h1 class="mb-3 title"><strong>マイページ</strong></h1>
        <div>
          <%= image_tag @user.get_profile_image(150,150) %>
        </div>

        <div class="row mt-3 border-bottom">
          <div class="col-md-6">
            <p><b>なまえ</b></p>
          </div>
          <div class="col-md-6">
            <p><b><%= @user.name %></b></p>
          </div>
        </div>
        <div class="row mt-3">
          <div class="col-md-6">
            <p><b>ひとこと</b></p>
          </div>
          <div class="col-md-6">
            <p><b><%= @user.introduction %></b></p>
          </div>
        </div>
        <div class="mb-3">
          <% unless @user.guest_user? %>
            <%= link_to edit_user_path(@user), class: "btn btn-warning btn-block" do %>
              <i class="fa-solid fa-pen-to-square"></i>
            <% end %>
          <% end %>
        </div>
    </div>
    <div class = "col-md-7 offset-md-1">
      <h1 class = "mb-3 title"><b>パーティーメンバー</b></h1>
        <%= render 'children/index', children: @children %>
    </div>
  </div>
</div>
<div>
  <%= image_tag "star1.png", class: "img-fluid bg-bottom" %>
</div>