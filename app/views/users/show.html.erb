<div class="container pt-5">
  <div class="row col-11 mx-auto">
    <div class="col-md-4">
      <h1 class="mb-3 title"><strong>マイページ</strong></h1>
        <div>
          <%= image_tag @user.get_profile_image(150,150) %>
        </div>
        <table class="table table-borderd mb-4 text-white">
          <tr>
            <th style="width: 35%;">なまえ</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>自己紹介</th>
            <th><%= @user.introduction %></th>
          </tr>
        </table>
        <% unless @user.guest_user? %>
          <%= link_to edit_user_path(@user), class: "btn btn-warning btn-block" do %>
            <i class="fa-solid fa-pen-to-square"></i>
          <% end %>
        <% end %>
    </div>
    <div class = "col-md-7 offset-md-1">
      <h1 class = "mb-3 title"><strong>パーティーメンバー</strong></h1>
        <%= render 'children/index', children: @children %>
    </div>
  </div>
</div>
<div>
  <%= image_tag "star1.png", class: "img-fluid bg-bottom" %>
</div>