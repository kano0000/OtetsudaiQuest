<div class="container mt-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <h2 class="mb-4" style="font-weight:bold; color:#FF9900; font-size:45px;"><strong><%= @task.task_list.name %></strong></h2>
      <table class="table table-bordered table-condensed" style="background-color: #FFFFBB;">
        <tbody>
          <%= image_tag @task.get_quest_image(200,200) %>
          <tr>
            <th style="background-color: #FFBBBB; width: 20%;">なまえ</th>
            <td><%= @task.task_list.name %></td>
          </tr>
          <tr>
            <th style="background-color: #FFBBBB;">獲得ポイント数</th>
            <td><%= @task.point %> ポイント</td>
          </tr>
          <tr>
            <th style="background-color: #FFBBBB;">メッセージ</th>
            <td><%= @task.description %></td>
          </tr>
          <tr>
            <th style="background-color: #FFBBBB;">開始日時</th>
            <% if @task.start_at.present? %>
              <td><%= @task.start_at.strftime("%Y年%-m月%-d日 %-H時%-M分") %></td>
            <% else %>
              <td>開始時間未設定</td>
            <% end %>
          </tr>
          <tr>
            <th style="background-color: #FFBBBB;">終了日時</th>
            <% if @task.end_at.present? %>
              <td><%= @task.end_at.strftime("%Y年%-m月%-d日 %-H時%-M分") %></td>
            <% else %>
              <td>終了時間未設定</td>
            <% end %>
          </tr>
          <tr>
            <th style="background-color: #FFBBBB;">参加メンバー<br>人数: <%= @task.num_people %>人</th>
            <td>
              <%= form_with model: [@task, @child_task] do |f| %>
                <% @children.each do |child| %>
                  <label>
                    <%= f.check_box :child, { multiple: true }, child.id, nil %>
                    <%= child.name %>
                  </label><br>
                <% end %>
                <%= f.submit "登録する", class: "btn btn-primary" %>
              <% end %>
            </td>
          </tr>
          <tr>
            <th style="background-color: #FFBBBB;">ステータス</th>
            <td><%= I18n.t("enums.task.status.#{@task.status}") %></td>
          </tr>
        </tbody>
      </table>
        <%= link_to tasks_path, class: "btn btn-info" do %>
          <i class="fa-solid fa-caret-left"></i> もどる
        <% end %>
        <%= link_to status_change_path(@task), class: "btn btn-danger" do %>
          <i class="fa-solid fa-flag-checkered"></i> はじめる
        <% end %>
    </div>
  </div>
</div>
