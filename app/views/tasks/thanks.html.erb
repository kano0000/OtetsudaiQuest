<div class="container mt-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <h1 class= "text-center">\\　おめでとう !!　//</h1>
       <div class="m-5 col-5 mx-auto">
          <div class="border p-4 text-center mb-3" >
            <h2><%= @task.point %> ポイントゲット</h2>
          </div>
          <div class="point-area">
            <h2>持っているポイント</h2>
            <table>
              <% @children.each do |child| %>
              <tr>
                <th><%= child.name %></th>
                <th><%= child.point %></th>
                <th> >> </th>
                  <% new_point = child.point + @task.point %>
                  <% child.update(point: new_point) %>
                <th><%= new_point %></th>
              </tr>
              <% end %>
            </table>
            <%= link_to about_path,class: "btn btn-info" do %>
              <i class="fa-solid fa-caret-left"></i> もどる
            <% end %>
            <%= link_to user_path(current_user),class: "btn btn-success" do %>
              <i class="fa-solid fa-user"></i> マイページへ
            <% end %>
        </div>
    </div>
  </div>
</div>
