<div class="container mt-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <h1 class= "text-center">\\　おめでとう !!　//</h1>
       <div class="m-5 col-5 mx-auto">
          <div style="padding: 15px; margin-bottom: 10px; border: 13px dotted #33ff99; background-color: #ffff99;" >
            <h2 class = "text-center", style = "color:#ff3333;"><strong><%= @task.point %> ポイントゲット</strong></h2>
          </div>
          <div class="point-area mt-4">
            <h2>持っているポイント</h2>
            <table class = "table mt-4">
              <% @children.each do |child| %>
              <tr>
                <th><%= child.name %></th>
                <th><%= child.point %></th>
                <th> >> </th>
                  <% new_point = child.point + @task.point %>
                  <% child.update(point: new_point) %>
                <th><%= new_point %></th>
              </tr>
              <% end %>
            </table>
            <div class = "mt-4">
              <%= link_to about_path,class: "btn btn-info" do %>
                <i class="fa-solid fa-caret-left"></i> もどる
              <% end %>
              <%= link_to user_path(current_user),class: "btn btn-success" do %>
                <i class="fa-solid fa-user"></i> マイページへ
              <% end %>
            </div>
        </div>
    </div>
  </div>
</div>
