<div class="container mt-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <table class = "table table-borderd" style="background-color: #FFFFBB;">
        <tr style="background-color: #FFBBBB;">
          <th></th>
          <th>なまえ</th>
          <th>獲得ポイント数</th>
          <th colspan="3"></th>
        </tr>
        <tr>
          <% @tasks.each do |task| %>
          <td>
            <%= image_tag task.get_quest_image(100,100) %>
          </td>
          <td>
            <%= task.task_list.name %>
          </td>
          <td>
            <%= task.point %> ポイント
          </td>
          <td>
            <%= link_to edit_task_path(task), class: "btn btn-success" do %>
              <i class="fa-solid fa-pen-to-square"></i> 編集する
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
