<div class="container mt-5">
  <div class="col-10 mx-auto">
    <h1 class="mb-4 contents-title text-center title"><strong>クエストメニュー</strong></h1>
    <div class = "text-right m-3">
      <h5><%= link_to '新着順', tasks_path(latest: "true") %>　|　
      <%= link_to 'ポイント順', tasks_path(most_point: "true") %></h5>
    </div>
      <div class="row">
        <% @tasks.each do |task| %>
          <div class="col-12 col-md-6 col-lg-4">
            <%= link_to task_path(task), :style => "text-decoration: none; font-weight:bold; color:#000000;　text-align:center" do %>
              <div class = "panel-box">
                <div class="card mb-4 shadow-lg panel">
                  <%= image_tag task.get_quest_image(200,200) %>
                    <div class="card-body">
                      <p class="text-center"><%= task.task_list.name %><p>
                      <p class="text-center"><%= task.point %> ポイント</p>
                    </div>
                 </div>
               </div>
            <% end %>
          </div>
        <% end %>
    </div>
  </div>
</div>
