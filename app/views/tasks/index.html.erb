<div class = "text-center">
  <%= image_tag "star5.png", class: "img-fluid" %>
</div>
<div class="container">
  <div class="col-10 mx-auto">
    <h1 class="mb-4 title"><strong>クエストメニュー</strong></h1>
    <div class = "text-right m-3 text-white">
      <h5><%= link_to 'あたらしい順', tasks_path(latest: "true"), :style => "text-decoration: none; color:#ffffff;"%>　|
      <%= link_to 'ポイント順', tasks_path(most_point: "true"), :style => "text-decoration: none; color:#ffffff;"%></h5>
    </div>
      <div class="row">
        <% @tasks.each do |task| %>
          <div class="col-12 col-md-6 col-lg-4">
            <% if task.completed? %>
              <div class = "panel-box">
                <div class="card mb-4 shadow-lg panel grayscaled">
                  <%= image_tag task.get_quest_image(200,200) %>
                    <div class="card-body">
                      <p class="text-center"><%= task.task_list.name %><p>
                      <p class="text-center"><%= task.point %> ポイント</p>
                    </div>
                 </div>
               </div>
            <%else %>
              <%= link_to task_path(task), :style => "text-decoration: none; font-weight:bold; color:#000000;　text-align:center" do %>
                <div class = "panel-box">
                  <div class="card mb-4 shadow-lg panel">
                    <%= image_tag task.get_quest_image(200,200) %>
                      <div class="card-body">
                        <p class="text-center"><%= task.task_list.name %><p>
                        <p class="text-center"><%= task.point %> ポイント</p>
                      </div>
                   </div>
                 </div>
              <% end %>
            <%end %>
          </div>
        <% end %>
    </div>
    <div class = "col-3 mx-auto pagination text-center">
      <%= paginate @tasks %>
    </div>
  </div>
</div>
