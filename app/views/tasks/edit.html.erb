<div class = "container mt-5">
  <div class = "row">
    <div class = "col-8 mx-auto">
      <h1 class="title mb-5">編集する</h1>
        <div class="p-3 bg-offwhite">
        <%= render "layouts/errors", obj: @task %>
        <%= form_with model: @task do |f| %>
        <div class="form-group">
          <%= f.label :name, "タイトル" %>
          <%= f.collection_select :task_list_id, TaskList.all, :id, :name, include_blank: "選択して下さい" %>
        </div>
        <div class="form-group">
          <%= f.label :description, "メッセージ" %>
          <%= f.text_area :description, class: "form-control"%>
        </div>
        <div>
          <%= f.label :num_people, "必要人数" %>
          <%= f.select :num_people,[["1人", 1],["2人", 2],["3人", 3],["4人", 4],["5人", 5]], {include_blank: "人数を選択して下さい"} %>
        </div>
        <div>
          <%= f.label :start_at, "開始日時" %>
          <%= f.datetime_field :start_at, class: 'form-control'%>
        </div>
        <div>
          <%= f.label :end_at, "終了日時" %>
          <%= f.datetime_field :end_at, class: 'form-control'%>
        </div>
        <div class="form-group">
          <%= f.label :point, "獲得ポイント数" %>
          <%= f.number_field :point, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :quest_image,  "写真を登録"%>
          <%= f.file_field :quest_image, class: "form-control-file",accept: "image/*" %>
        </div>
        <div class="form-group mt-3">
          <%= f.radio_button :published, true %>
          <%= f.label :published, "公開" %>
          <%= f.radio_button :published, false %>
          <%= f.label :published, "準備中" %>
        </div>
        <div class="form-group">
          <%= f.submit "更新する", class: "btn btn-success", style: "border-radius: 12px;" %>
        </div>
        <div class="col mb-2 mx-auto">
          <%= link_to "削除する", task_path(@task), method: :delete, class: "btn btn-danger", style: "border-radius: 12px;" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div>
  <%= image_tag "star2.png", class: "img-fluid bg-bottom" %>
</div>

