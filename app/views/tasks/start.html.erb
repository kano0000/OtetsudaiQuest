<div class="container mt-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <h1>スタートする</h1>
      <div class="form-group mt-3">
        <%= form_with model: @task, local: true, remote: true do |f| %>
          <div class="field">
            <%= f.label :status, "ステータス" %>
            <%= f.select :status, Task.statuses.keys.map { |status| [I18n.t("enums.task.status.#{status}"), status] } %>
          </div>
          <div class="actions">
            <%= f.submit "更新する" %>
          </div>
        <% end %>
      </div>      
    </div>
  </div>
</div>
